<?xml version="1.0"?>
<package>
  <name>roch_rapps</name>
  <version>2.0.12</version>
  <description>The roch_rapps package for set of 'app manager' apps definition</description>

  <maintainer email="wzhang@softrobtech.com">Carl</maintainer>
  <author email="wzhang@softrobtech.com">Carl</author>

  <license>BSD</license>

  <url type="website">http://ros.org/wiki/roch_rapps</url>
  <url type="repository">https://github.com/SawYer-Robotics/roch</url>
  <url type="bugtracker">https://github.com/SawYer-Robotics/roch/issues</url>


  <buildtool_depend>catkin</buildtool_depend>

  <run_depend>roch_bringup</run_depend>
  <run_depend>roch_follower</run_depend>
  <run_depend>roch_navigation</run_depend>
  <run_depend>roch_teleop</run_depend>
  <run_depend>robot_pose_publisher</run_depend>
  <run_depend>nodelet</run_depend>
 
  <!-- for navigation apps -->
  <run_depend>warehouse_ros</run_depend>
  <run_depend>world_canvas_server</run_depend>
  <run_depend>tf</run_depend>

  <!-- android teleop -->
  <run_depend>compressed_image_transport</run_depend>
  <run_depend>topic_tools</run_depend>


  <export>

    <rocon_app>rapps/make_a_map/make_a_map.rapp</rocon_app>
    <rocon_app>rapps/make_a_map/qt_make_a_map.rapp</rocon_app>
  
    <rocon_app>rapps/map_nav/map_nav.rapp</rocon_app>
    <rocon_app>rapps/map_nav/qt_map_nav.rapp</rocon_app>
 
    <rocon_app>rapps/waypoint_nav/waypoint_nav.rapp</rocon_app>

    <rocon_app>rapps/map_manager/map_manager.rapp</rocon_app>
    <rocon_app>rapps/teleop/teleop.rapp</rocon_app>
    <rocon_app>rapps/video_teleop/video_teleop.rapp</rocon_app>
    <rocon_app>rapps/xbox360_teleop/xbox360_teleop.rapp</rocon_app>
    <rocon_app>rapps/ps3_teleop/ps3_teleop.rapp</rocon_app>
    <rocon_app>rapps/keyboard_teleop/keyboard_teleop.rapp</rocon_app>

    <rocon_app>rapps/follower/follower.rapp</rocon_app>
    <rocon_app>rapps/3dsensor/3dsensor.rapp</rocon_app>
    <rocon_app>rapps/2dlaser/2dlaser.rapp</rocon_app>
  </export>
</package>
